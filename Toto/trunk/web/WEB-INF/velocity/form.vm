<?doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
		doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd" />
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>

    <script src="/js/gen_validatorv4.js" type="text/javascript"></script>

    <style>

    .wrapper{
        height:600px;
        width:60%;
        border:1px solid #333333;
        overflow:auto;
    }

    .supplierlogo{
        height:100px;
        width:60%;
        border:1px solid #222222;
    }

    .reviewsummary{
        position: relative;
         width: 300px;
        border 1px solid #333333

    }
    .review{
        position:relative;
        height:150px;
        width:500px;
        border:1px solid #444444;
    }
    .reviewrating{
        position:relative;
        left:200px;
        width:320px;
        top:30px;
    }

    .reviewproduct{
        position:relative;
        left:10px;
        top:50px;
        width:300px;

    }

    .reviewcomment{
        position:relative;
        top:35px;
        left:180px;
        width:260px;
    }

    .formbottom{
        position:relative;
        left:0;
        width:500px;
        height:30px;
    }
</style>
</head>
<body>
<div id="wrapper">

    <div id="supplierlogo>$supplierlogo</div>
    <div id="intro">$intro</div>
<form  method="post" id="review" name="review">
    <input type="hidden" name="connectionid" value="$connectionid"/>
<div class="reviewsummary">
    <div class="reviewcategory"></div>
    #foreach($review in $reviews)
        #if($review.type eq "service")
            <div class="review">
                <div class="reviewproduct">$review.product</div>
                <div class="reviewrating">Rating <input name="$review.ratingname" id="$review.ratingname" value="$review.rating"/></div>
                <div class="reviewcomment">Comment <input name="$review.commentname" id="$review.commentname" value="$review.comment"/></div>
            </div>
        #end
    #end
 </div>

<div class="reviewsummary">
    <div class="reviewcategory">Product</div>
    #foreach($review in $reviews)
        #if($review.type eq "product")
            <div class="review">
                <div class="reviewproduct">$review.product</div>
                <div class="reviewrating">Rating <input name="$review.ratingname" id="$review.ratingname" value="$review.rating"/></div>
                <div class="reviewcomment">Comment <input name="$review.commentname" id="$review.commentname" value="$review.comment"/></div>
            </div>
        #end
    #end
<div id="review_errorloc" class="error_strings" style="color:red"></div>
</div>

<div class="formbottom">
    <input type="submit" name="submit" value="$submit"/>
</div>
</form>
<script type="text/javascript">
    var frmvalidator  = new Validator("review");
        $validationscript
</script>
</div>
</body>

</html>









